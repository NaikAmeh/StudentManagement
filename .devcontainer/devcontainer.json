{
  "name": "StudentManagement Codespace",
  "dockerFile": "../backend/src/StudentManagement.API/Dockerfile",
  "workspaceFolder": "/workspaces/StudentManagement",

  "forwardPorts": [
    5000,
    5001,
    3000,
    3306
  ],

  "portsAttributes": {
    "5000": { "label": "Backend API (HTTP)" },
    "5001": { "label": "Backend API (HTTPS)" },
    "3000": { "label": "Frontend (React Dev)" },
    "3306": { "label": "MySQL Database" }
  },

  "postCreateCommand": "dotnet restore backend/src/StudentManagement.API/StudentManagement.API.csproj",
  "postStartCommand": "dotnet run --project backend/src/StudentManagement.API/StudentManagement.API.csproj & npm start --prefix frontend",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.vscode-node-azure-pack",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.codespaces",
        "cweijan.vscode-mysql-client2",
        "msjsdiag.debugger-for-chrome"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "remoteUser": "vscode"
}